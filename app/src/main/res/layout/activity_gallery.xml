<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.williamjin.drawerlayout.gallery.GalleryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:id="@+id/im_gallery_in_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9" />

        <Button
            android:id="@+id/btn_gallery_in_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/im_gallery_in_activity"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Pick a image"
            android:onClick="handlePickImageBtn" />


    </LinearLayout>

</LinearLayout>
